{
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "declaration": true,
    "outDir": "dist/esm",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node"
  }
}
