{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "removeComments": true
  }
}